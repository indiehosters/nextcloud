#/bin/bash
mkdir -p $PWD/ssl/private
chmod 700 $PWD/ssl/private
mkdir -p $PWD/ssl/certs
docker run -v $PWD/ssl:/work:Z -it centurylink/openssl openssl req -x509 -nodes -days 365 -newkey rsa:2048 -keyout /work/private/nginx-selfsigned.key -out /work/certs/nginx-selfsigned.crt
#docker run -v $PWD/ssl:/work:Z -it centurylink/openssl openssl req -out /work/CSR.csr -new -newkey rsa:2048 -nodes -keyout /work/privateKey.key -days 365
docker run -v $PWD/ssl:/work:Z -it centurylink/openssl openssl dhparam -out /work/certs/dhparam.pem 2048
#docker run -v $PWD/ssl:/work:Z -it centurylink/openssl openssl req -x509 -sha256 -nodes -days 365 -newkey rsa:2048 -keyout privateKey.key -out /work/certificate.crt
